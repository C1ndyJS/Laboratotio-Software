const express = require("express");
const router = express.Router();
const flightController = require('../controllers/flightController');
// Ruta para registrar un nuevo usuario
router.post("/register", flightController.register);

// Ruta para iniciar sesi√≥n
router.post("/login", flightController.login);

// Definir las rutas
router.get("/CancelarVuelos", flightController.getAllFlights); // Obtener todos los vuelos
router.post("/crearvuelo", flightController.createFlight); // Crear un vuelo nuevo

router.delete("/CancelarVuelos/:CodigoVuelo", flightController.cancelFlightController);

module.exports = router;
